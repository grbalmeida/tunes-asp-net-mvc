@model FaixaViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

<h4 style="padding-top: 30px;">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-action="Editar">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <input type="hidden" asp-for="FaixaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Compositor" class="control-label"></label>
                <input asp-for="Compositor" class="form-control" />
                <span asp-validation-for="Compositor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milissegundos" class="control-label"></label>
                <input asp-for="Milissegundos" class="form-control" />
                <span asp-validation-for="Milissegundos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bytes" class="control-label"></label>
                <input asp-for="Bytes" class="form-control" />
                <span asp-validation-for="Bytes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoUnitario" class="control-label"></label>
                <input asp-for="PrecoUnitario" class="form-control" />
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Albuns, "AlbumId", "Titulo"))">
                    <option></option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMidiaId" class="control-label"></label>
                <select asp-for="TipoMidiaId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.TiposDeMidia, "TipoMidiaId", "Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="TipoMidiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Generos, "GeneroId", "Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}