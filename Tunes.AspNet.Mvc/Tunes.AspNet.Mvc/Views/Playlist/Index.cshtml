@model List<PlaylistViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Playlists";
}
<div class="container main-container">
    <h1>Playlists</h1>
    <hr>

    <p>
        <a class="btn btn-info" asp-controller="Playlist" asp-action="Novo">Nova Playlist</a>
    </p>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nome
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var playlist in Model)
            {
                <tr>
                    <td>
                        @playlist.Nome
                    </td>
                    <td class="text-right">
                        <a class="btn btn-warning"
                           asp-controller="Playlist"
                           asp-action="Detalhes"
                           asp-route-id="@playlist.PlaylistId">
                            Detalhes
                        </a>
                        <a class="btn btn-info"
                           asp-controller="Playlist"
                           asp-action="Editar"
                           asp-route-id="@playlist.PlaylistId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="Playlist"
                           asp-action="Excluir"
                           asp-route-id="@playlist.PlaylistId">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>